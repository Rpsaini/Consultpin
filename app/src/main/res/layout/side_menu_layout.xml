<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="240dp"
        >
    <RelativeLayout
        android:background="@color/sidenavigation_upper_color"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >
        <ImageView
            android:id="@+id/rr_homenav"
            android:alpha=".1"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/profileavtar"
            ></ImageView>

    </RelativeLayout>



        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/rr_profile"
            >
        <ImageView
            android:id="@+id/profileimage"
            android:scaleType="fitXY"
            android:layout_height="90dp"
            android:layout_width="85dp"

            android:src="@drawable/profileavtar"
            ></ImageView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/edit_profile"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/rr_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <fontspackageForTextView.BoldMedium
                android:maxLines="1"
                android:id="@+id/nav_name"
                style="@style/edittext_style_18_black"
                android:layout_marginTop="10dp"
                 android:text="Username"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                ></fontspackageForTextView.BoldMedium>

            <fontspackageForTextView.Regular
                android:id="@+id/tv_edit_profile"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                style="@style/edittext_style_12_grey"
                android:text="Edit Profile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                ></fontspackageForTextView.Regular>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_color"
        ></View>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@android:color/transparent">

        <include layout="@layout/side_menu_for_consultant" />
    </ScrollView>

</LinearLayout>