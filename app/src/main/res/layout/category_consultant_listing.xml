<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:padding="0dp"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_best_restaurant"
    android:background="@color/category_listing_bg"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:id="@+id/consultant_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingBottom="3dp"
            android:src="@drawable/profileavtar"
            ></ImageView>
    </RelativeLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".6"
        android:orientation="vertical"
        >
        <fontspackageForTextView.BoldMedium
            android:id="@+id/consultant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_gravity="center"
            style="@style/edittext_style_14_black"
            android:text="Aman kumar pandey"
            ></fontspackageForTextView.BoldMedium>

        <fontspackageForTextView.Regular
            android:id="@+id/experiance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_gravity="center"
            style="@style/edittext_style_12_grey"
            android:text="Dentist,Eye Care"
            ></fontspackageForTextView.Regular>


    </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:orientation="vertical"
            >
            <fontspackageForTextView.BoldMedium
                android:id="@+id/consultant_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="right"
                android:layout_gravity="right"
                style="@style/edit_text_skyblue_14"
                android:text="0tl"
                ></fontspackageForTextView.BoldMedium>

            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_star"
                    app:tint="@color/golden_color"></ImageView>

                <fontspackageForTextView.BoldMedium
                    android:paddingStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/edittext_style_10_black"
                    android:text="4.0/5"
                    ></fontspackageForTextView.BoldMedium>

                <fontspackageForTextView.BoldMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/edittext_style_10_bottomnav"
                    android:text="(124)"
                    ></fontspackageForTextView.BoldMedium>


            <fontspackageForTextView.Regular
                android:id="@+id/specialties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/edittext_style_12_grey"
                android:text=""
                ></fontspackageForTextView.Regular>
            </LinearLayout>

        </LinearLayout>

        <ImageView

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_gravity="center"
            android:src="@drawable/ic_next"
            android:rotation="180"
            app:tint="@color/black"></ImageView>


    </LinearLayout>



</LinearLayout>