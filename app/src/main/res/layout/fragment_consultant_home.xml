<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.ConsultantHome">



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <fontspackageForTextView.Regular
            android:id="@+id/txt_totalincom"
            android:textSize="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0L"
            android:gravity="center"
            ></fontspackageForTextView.Regular>

        <fontspackageForTextView.Regular
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/totalincome"
            android:gravity="center"
            android:textColor="@color/texthintcolor"
            ></fontspackageForTextView.Regular>
    </LinearLayout>


    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".5"
            >
        <fontspackageForTextView.Regular
            android:id="@+id/txt_totalappointment"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            ></fontspackageForTextView.Regular>

        <fontspackageForTextView.Regular
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total_appointments"
            android:gravity="center"
            android:textColor="@color/texthintcolor"
            ></fontspackageForTextView.Regular>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".5"
            >
            <fontspackageForTextView.Regular
                android:id="@+id/txt_cancelledappointment"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red_color"
                android:gravity="center"
                ></fontspackageForTextView.Regular>

            <fontspackageForTextView.Regular
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancelled_appointment"
                android:gravity="center"
                android:textColor="@color/texthintcolor"
                ></fontspackageForTextView.Regular>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".5"
            >
            <fontspackageForTextView.Regular
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txt_ongoingappointment"
                android:gravity="center"
                ></fontspackageForTextView.Regular>

            <fontspackageForTextView.Regular
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ongoining_appoints"
                android:gravity="center"
                android:textColor="@color/texthintcolor"
                ></fontspackageForTextView.Regular>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".5"
            >
            <fontspackageForTextView.Regular
                android:id="@+id/txt_upcomingappointment"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                ></fontspackageForTextView.Regular>

            <fontspackageForTextView.Regular
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upcomming_appointments"
                android:gravity="center"
                android:textColor="@color/texthintcolor"
                ></fontspackageForTextView.Regular>
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_marginTop="30dp"
        android:layout_height="1dp"
        android:alpha=".5"
        android:layout_width="match_parent"
        android:background="@color/texthintcolor"
        ></View>

    <fontspackageForTextView.Regular
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upcomming_appointments"
        android:gravity="left"
        android:layout_marginTop="30dp"
        ></fontspackageForTextView.Regular>

     <include layout="@layout/no_data_found"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upcomming_app_recycler"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        ></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>