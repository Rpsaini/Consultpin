<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:padding="0dp"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_list_of_event"
    android:background="@color/category_listing_bg"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:id="@+id/event_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingBottom="3dp"
            android:src="@drawable/profileavtar"
            ></ImageView>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:orientation="vertical"
            >
            <fontspackageForTextView.BoldMedium
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center|left"
                android:layout_gravity="center"
                style="@style/edittext_style_14_black"
                android:text="text"
                ></fontspackageForTextView.BoldMedium>

            <fontspackageForTextView.Regular
                android:id="@+id/appointment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center|left"
                android:layout_gravity="center"
                style="@style/edittext_style_12_grey"
                android:text="00"
                ></fontspackageForTextView.Regular>

            <fontspackageForTextView.Regular

                android:id="@+id/event_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center|left"
                android:layout_gravity="center"
                style="@style/edittext_style_12_purple"
                android:text="00"
                ></fontspackageForTextView.Regular>


                <fontspackageForTextView.Regular
                    android:id="@+id/event_number_of_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:layout_gravity="center"
                    style="@style/edittext_style_12_grey"
                    android:text=""
                    ></fontspackageForTextView.Regular>


        </LinearLayout>



        <RelativeLayout
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/txt_cancel"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/cancel"
                android:gravity="center"
                android:background="@drawable/button_purple"
                ></TextView>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>