<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/roundcorner_drawable"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        >



        <ImageView
            android:padding="9dp"
            android:id="@+id/img_hide"
            android:src="@drawable/ic_cancel"
            android:layout_gravity="right"
            android:layout_height="35dp"
            android:layout_width="35dp"
            ></ImageView>

        <ImageView
            android:src="@drawable/man"
            android:id="@+id/img_for_event"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            ></ImageView>

        <fontspackageForTextView.BoldMedium
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Event name"
            android:textSize="16dp"
            android:id="@+id/txt_eventname"
            ></fontspackageForTextView.BoldMedium>


        <LinearLayout
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <fontspackageForTextView.Regular
                android:id="@+id/txt_eventfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center|left"
                android:layout_gravity="center"
                style="@style/edittext_style_12_grey"
                android:text=""
                ></fontspackageForTextView.Regular>

            <fontspackageForTextView.BoldMedium
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Event name"
                android:textSize="16dp"
                android:id="@+id/txt_eventtime"
                ></fontspackageForTextView.BoldMedium>



            <fontspackageForTextView.BoldMedium
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="16dp"
                android:id="@+id/txt_eventtype"
                ></fontspackageForTextView.BoldMedium>


            <fontspackageForTextView.BoldMedium
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="16dp"
                android:id="@+id/txt_event_noofuser"
                ></fontspackageForTextView.BoldMedium>






            <fontspackageForTextView.BoldMedium
                android:id="@+id/txt_eventdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center|left"
                android:layout_gravity="center"
                style="@style/edit_text_skyblue_14"
                android:text="10tl"
                ></fontspackageForTextView.BoldMedium>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_showVideoChat"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >


            <fontspackageForTextView.Regular
                android:textAllCaps="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/txt_bookevent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/bookevent"
                android:background="@drawable/drawable_button_skyblue"
                ></fontspackageForTextView.Regular>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>