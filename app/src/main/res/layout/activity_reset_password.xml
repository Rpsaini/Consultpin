<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/RRsignuptoplayout"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_top"
                android:id="@+id/ll_sec"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_splashlogo" />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_lock" />


                <fontspackageForTextView.BoldMedium

                    style="@style/edittext_style_18_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/new_password"
                    android:textStyle="bold"

                    ></fontspackageForTextView.BoldMedium>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/enter_your_new_password"
                    style="@style/edittext_style_12_grey"
                    android:gravity="center"
                    ></TextView>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                    <fontpackageforEdittext.Regular
                        android:id="@+id/et_oldpaswword"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_bottom_drawable"
                        android:hint="@string/oldPassword"
                        android:inputType="textPassword"
                        android:maxLength="70" />


                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/img_eye_oldpassword"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_hide_password" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >


                    <fontpackageforEdittext.Regular
                        android:background="@drawable/edittext_bottom_drawable"
                        android:maxLength="70"
                        android:id="@+id/et_password"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="@string/password"
                        android:layout_below="@+id/et_oldpaswword"
                        android:inputType="textPassword" />

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/img_eye_password"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_hide_password" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    >
                    <fontpackageforEdittext.Regular
                        android:layout_marginTop="15dp"
                        android:background="@drawable/edittext_bottom_drawable"
                        android:maxLength="70"
                        android:id="@+id/et_conf_password"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="@string/con_password"
                        android:inputType="textPassword" />

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/img_eye_conf_password"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_hide_password" />
                </RelativeLayout>

                <fontspackageForTextView.Regular
                    android:id="@+id/tv_submit"
                    android:background="@drawable/drawable_button_skyblue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/change" />



            </LinearLayout>

        </LinearLayout>

    </ScrollView>





</RelativeLayout>