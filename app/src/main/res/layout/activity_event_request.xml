<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/profile_background"
    tools:context=".ui.home.Chat">


    <include layout="@layout/tootlbar_with_back_button"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <fontspackageForTextView.BoldMedium
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/edittext_style_14_black"
            android:text="@string/about_the_event"
            >
        </fontspackageForTextView.BoldMedium>

        <fontpackageforEdittext.Regular
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/ed_about_event"
            android:background="@drawable/roundcorner_drawable"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            style="@style/edittext_style_12_grey"
            android:hint="@string/write_information"
            android:layout_marginStart="10dp"
            android:gravity="left"
            android:padding="5dp"
            ></fontpackageforEdittext.Regular>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <fontspackageForTextView.BoldMedium
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/edittext_style_14_black"
                android:text="@string/event_date"
                >
            </fontspackageForTextView.BoldMedium>


            <fontspackageForTextView.BoldMedium

                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/event_time"
                >
            </fontspackageForTextView.BoldMedium>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <fontspackageForTextView.Regular
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/ic_monthlycalendar"
                android:id="@+id/ed_datefrom"
                android:background="@drawable/roundcorner_drawable"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/edittext_style_12_grey"
                android:hint="@string/event_date"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:gravity="left|center"

                >
            </fontspackageForTextView.Regular>


            <fontspackageForTextView.Regular
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_clockcircularoutline"
                android:layout_marginEnd="10dp"
                android:id="@+id/ed_date_end"
                android:background="@drawable/roundcorner_drawable"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/edittext_style_12_grey"
                android:hint="@string/event_time"
                android:layout_marginStart="10dp"
                android:gravity="left|center"
                >
            </fontspackageForTextView.Regular>
        </LinearLayout>


        <fontspackageForTextView.BoldMedium
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/edittext_style_14_black"
            android:text="@string/event_category"
            >
        </fontspackageForTextView.BoldMedium>


        <fontspackageForTextView.Regular
            android:id="@+id/txt_event_category"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:hint="@string/event_category"
            android:gravity="center|left"
            style="@style/edittext_style"
            android:padding="5dp"
            android:drawableTint="@color/black"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:background="@drawable/roundcorner_drawable"
            ></fontspackageForTextView.Regular>

        <fontspackageForTextView.BoldMedium
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            style="@style/edittext_style_14_black"
            android:text="@string/first_name"
            >
        </fontspackageForTextView.BoldMedium>





        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="@color/profile_fee_color"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            >
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                >
            <ImageView
                android:id="@+id/img_ispaid"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_button"
                ></ImageView>

            <fontspackageForTextView.BoldMedium
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:text="@string/paid"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="left"
                style="@style/edittext_style_14_black"
                ></fontspackageForTextView.BoldMedium>
            </LinearLayout>

            <fontpackageforEdittext.Regular
                android:id="@+id/ed_paid_fee"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundcorner_drawable"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_weight="1"
                style="@style/edittext_style_12_grey"
                android:hint="fee"
                android:paddingStart="10dp"
                android:gravity="left|center"
                >
            </fontpackageforEdittext.Regular>
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >

            <fontspackageForTextView.BoldMedium
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                style="@style/edittext_style_14_black"
                android:text="@string/numberofparticipaint"
                >
            </fontspackageForTextView.BoldMedium>

            <fontpackageforEdittext.Regular
                android:id="@+id/ed_numberofdays"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundcorner_drawable"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:layout_weight="1"
                style="@style/edittext_style_12_grey"
                android:hint=""
                android:paddingStart="10dp"
                android:gravity="left|center"

                >
            </fontpackageforEdittext.Regular>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/roundcorner_drawable"
            >

            <fontspackageForTextView.BoldExtra
                android:id="@+id/selected_image"
                style="@style/edittext_style_12_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="@string/lawer_licence"></fontspackageForTextView.BoldExtra>


            <ImageView
                android:id="@+id/ic_upload_licence"
                android:src="@drawable/ic_upload"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                >
            </ImageView>

        </RelativeLayout>

        <fontspackageForTextView.BoldMedium
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/edittext_style_14_black"
            android:text="@string/imagetitle"
            >
        </fontspackageForTextView.BoldMedium>

        <fontspackageForTextView.BoldMedium
            android:textColor="@color/texthintcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="@string/imagelimit"></fontspackageForTextView.BoldMedium>


        <fontspackageForTextView.Regular
            android:id="@+id/tv_save"
            android:background="@drawable/button_purple"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:text="@string/sendrequest" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>