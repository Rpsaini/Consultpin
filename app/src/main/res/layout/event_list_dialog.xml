<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_list_of_event"
    android:background="@color/category_listing_bg"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:padding="7dp"
        android:id="@+id/img_cross"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cancel"
        app:tint="@color/black"
        ></ImageView>



        <ImageView
            android:layout_below="@+id/img_cross"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:id="@+id/event_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingBottom="3dp"
            android:src="@drawable/profileavtar"
            ></ImageView>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <fontspackageForTextView.BoldMedium
                android:id="@+id/event_name"
                style="@style/edittext_style_14_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:text=""></fontspackageForTextView.BoldMedium>

            <fontspackageForTextView.BoldMedium
                android:id="@+id/event_desc"
                style="@style/edittext_style_12_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:text=""></fontspackageForTextView.BoldMedium>



            <fontspackageForTextView.Regular
                android:id="@+id/appointment_time"
                style="@style/edittext_style_12_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="00"></fontspackageForTextView.Regular>

            <fontspackageForTextView.Regular

                android:id="@+id/event_fee"
                style="@style/edittext_style_12_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="00"></fontspackageForTextView.Regular>


            <fontspackageForTextView.Regular
                android:id="@+id/event_number_of_user"
                style="@style/edittext_style_12_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:singleLine="true"
                android:text=""></fontspackageForTextView.Regular>


            <fontspackageForTextView.Regular
                android:id="@+id/event_type"
                style="@style/edittext_style_12_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:singleLine="true"
                android:text=""></fontspackageForTextView.Regular>


            <fontspackageForTextView.Regular
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/txt_bookevent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/bookevent"
                android:background="@drawable/drawable_button_skyblue"
                ></fontspackageForTextView.Regular>


        </LinearLayout>



    </LinearLayout>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>