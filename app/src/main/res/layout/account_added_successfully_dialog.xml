<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outerlinearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:padding="10dp"
    android:background="@drawable/roundcorner_drawable"
    android:orientation="vertical">


    <LinearLayout

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">




        <ImageView
            android:padding="5dp"
            android:id="@+id/changeerrorimage"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_successful"
            ></ImageView>









        <fontspackageForTextView.BoldExtra
            android:id="@+id/maintitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            style="@style/edittext_style_18_black"
            android:text="@string/success"
            ></fontspackageForTextView.BoldExtra>


        <fontspackageForTextView.Regular
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            style="@style/edittext_style_14_grey"
            android:text="@string/account_added"
            ></fontspackageForTextView.Regular>

        <View
            android:alpha=".6"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginTop="7dp"
            ></View>




        <fontspackageForTextView.Regular
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/drawable_button_skyblue"

            android:id="@+id/okaybtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:checked="false"
            android:gravity="center"
            android:padding="5dp"
            style="@style/edittext_style_18_white"
            android:text="OK"
            android:tag="0"
            />

    </LinearLayout>
</LinearLayout>
