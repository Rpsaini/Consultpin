<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Consultpin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>  //app bar color code
        <item name="colorPrimaryDark">@color/white</item>  //status bar color code
        <item name="colorAccent">@color/buttonskyblue</item>  //buttonetc color bar color code
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/texthintcolor</item>
        <item name="android:windowDisablePreview">true</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/cardview_light_background</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>



    <style name="Theme.Consultpin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Consultpin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Consultpin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="edittext_style">
        <item name="android:textSize">15dp</item>

    </style>

    <style name="edittext_style_12">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edittext_style_18_black">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edittext_style_12_bottomnav">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/bottom_navigation_color</item>
    </style>


    <style name="edittext_style_12_grey">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/texthintcolor</item>
    </style>
    <style name="edittext_style_12_purple">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/textpurple</item>
    </style>
    <style name="edittext_style_14_black">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>





</resources>